{
    "kind": "collectionType",
    "collectionName": "categories",
    "info": {
        "singularName": "category",
        "pluralName": "categories",
        "displayName": "Category",
        "description": "Project categories managed from Strapi dashboard"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {
        "i18n": {
            "localized": true
        }
    },
    "attributes": {
        "name": {
            "type": "string",
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "slug": {
            "type": "uid",
            "targetField": "name",
            "required": true
        },
        "group": {
            "type": "string",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "projects": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::project.project",
            "mappedBy": "categories"
        },
        "order": {
            "type": "integer",
            "default": 0
        }
    }
}